<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description>deal</Description>
    <FaultRules/>
    <Flows>
        <Flow name="ApiV{versionDealPost">
            <Description>HomeBase endpoint for creating a new Trident deal</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/api/v{version}/Deal") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="ApiV{versionDealPut">
            <Description>HomeBase endpoint for updating an existing Trident deal</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/api/v{version}/Deal") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="ApiV{versionFDStagedTransactionPost">
            <Description>Creates first data staging transaction record</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/api/v{version}/FDStagedTransaction") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="ApiV{versionFDStagedTransactionByTranIdentKeyPut">
            <Description></Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/api/v{version}/FDStagedTransaction/{TranIdentKey}") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="ApiV{versionFDStagedTransactionByTranIdentKeyDelete">
            <Description></Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/api/v{version}/FDStagedTransaction/{TranIdentKey}") and (request.verb = "DELETE")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>FC-SpikeArrest</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>FC-JWT</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/vv0/deal</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
