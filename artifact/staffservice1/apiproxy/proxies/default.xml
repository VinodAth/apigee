<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description>MDM Staff Entity</Description>
    <FaultRules/>
    <Flows>
        <Flow name="GET /staff">
            <Description>Fetches all staff with filters</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/staff") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GET /staff/changes">
            <Description>Fetches the changes associated with the staff</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/staff/changes") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GET /staff/{staffMasterId}">
            <Description>Finds staff by staff MasterId</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/staff/{staffMasterId}") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <FaultRules/>
                <Name>FC-MessageLogger</Name>
            </Step>
        </Response>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>FC-ExtractParameters</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>FC-CommonConfig</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>FC-SpikeArrest</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>FC-APIKey</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>FC-JWT</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/v1./staffservice</BasePath>
        <Properties/>
        <VirtualHost>realogy-secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
